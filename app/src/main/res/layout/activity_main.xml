<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFBEBE"
    android:backgroundTint="#D69F9F"
    android:gravity="center"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/TTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        tools:hint="@string/quizBy"
        android:inputType="date"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        tools:text="@string/quizBy"
        tools:textColorHint="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/question_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="#E11010"
        android:textSize="34sp"
        tools:text="@string/first_question" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/true_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:backgroundTint="#00BCD4"
            android:text="@string/true_Button"
            android:textColor="#212121"
            android:textColorHighlight="@color/black" />

        <Button
            android:id="@+id/false_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@android:dimen/app_icon_size"
            android:layout_weight="1"
            android:background="@color/black"
            android:backgroundTint="#03A9F4"
            android:text="@string/false_Button"
            android:textColor="#757575"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backbutton"
            android:textColor="#F8BBD0" />

        <LinearLayout
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:text="@string/nextButton" />
    </LinearLayout>

</LinearLayout>